def build(bld):
    source = """
    socket_common.c
    """.split()
    if bld.env.socket_impl == 'wsock32':
        source.extend(['socket_win32.c'])
    else:
        source.extend(['socket_unix.c'])

    bld.objects(
        features = 'visibilityhidden',
        cflags=bld.env.CFLAGS_cshlib,
        target = 'xmmssocket',
        source = source,
        includes = '. ../../.. ../../include',
        uselib = 'socket',
        install_path = None,
        defines = 'XMMSC_LOG_DOMAIN="xmmsc/xmmssocket"'
        )


def configure(conf):
    return True


def options(opt):
    pass
